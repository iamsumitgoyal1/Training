<div><h2>Users:</h2></div>



<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>



<div>
   <table class="index_table" >
   <thead>
      <tr>
         <th>id</th>
         <th>Name</th>
         <th>Actions</th>
      </tr>
   </thead>
   <tbody>
      <% @users.each do |user|%>
      <tr>
         <td><%= user.id %></td>
         <td><%= user.name %></td>
    <div><td class='Action'>
               <%=link_to 'Show',user_path(user) %>
               <%=link_to 'Edit',edit_user_path(user) %>
               <%=link_to "Delete",user_path(user),method: :delete,data: {confirm: "Are you sure you want to delete this user?"}%></td></div>
      </tr>
      <%end%>
   </tbody>
   </table><br>

   <div><%= link_to'Add New user',new_user_path %></div></br>

</div>




