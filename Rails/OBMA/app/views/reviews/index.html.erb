<head>
   <title>Online Liberary</title>
   <style type="text/css">
      table,th,td {border: 1px solid black;}
      thead {background: #9370DB; color: black; }
      tbody {background: #fff; color: black; }
      table {margin: auto; width: 50%;border-collapse: collapse;}
      th,td {padding:10px; text-align: center; font-size: 15px;}
      .links,tr:hover {background:     #8A2BE2; color:#fff;}
   </style>
</head>



<div><h1>Reviews: </h1></div>

<div><%= link_to 'Add A Review',new_review_path %></div>

<table>
	<thead>
		<tr>
			<th>id</th>
			<th>book_id</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @reviews.each do |r| %>
		<tr>
		<td> <%= r.id %></td>
		<td> <%= r.book_id %></td>
		<div><td class="Actions">
		<%= link_to 'Show',review_path(r) %>
		<%= link_to 'Edit',edit_review_path(r) %>
		<%= link_to 'Delete',review_path(r),method: :delete,data: {confirm: "Are you sure you want to delete this review"} %>
	    </td></div>
	    </tr>
	    <% end %>
    </tbody>
</table>

