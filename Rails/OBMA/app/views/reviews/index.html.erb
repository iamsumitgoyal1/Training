<div><h1>Reviews: </h1></div>

<div><%= link_to 'Add A Review',new_review_path %></div>

<table>
	<thead>
		<tr>
			<th>id</th>
			<th>book_id</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @reviews.each do |r| %>
		<tr>
		<td> <%= r.id %></td>
		<td> <%= r.book_id %></td>
		<div><td class="Actions">
		<%= link_to 'Show',review_path(r) %>
		<%= link_to 'Edit',edit_review_path(r) %>
		<%= link_to 'Delete',review_path(r),method: :delete,data: {confirm: "Are you sure you want to delete this review"} %>
	    </td></div>
	    </tr>
	    <% end %>
    </tbody>
</table>

