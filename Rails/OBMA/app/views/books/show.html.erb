<div class="books">

  <div><h2>Book Details:</h2></div></br>

<div class="book_rep">
  <div>
    <label>id :</label>
    <%= @book.id %>
  </div>
  <div>
    <label>Name :</label>
    <%= @book.title %>
  </div>
  <div>
    <label>Price :</label>
    <%= @book.price %>
  </div>
  <div>
    <label>Writer:</label>
    <%= @book.author %>
  </div>
  <div>
    <label>Category:</label>
    <%= @book.category %>
  </div>
  <div>
    <label>Published Date:</label>
    <%= @book.published_date %>
  </div>
  <div>
    <label>ISBN:</label>
    <%= @book.isbn %>
  </div>
  <div>
    <label>Created</label>
    <%= @book.created_at %>
  </div>
  <div>
    <label>Updated</label>
    <%= @book.updated_at %>
  </div>
</div><br>

<div>
  <h4>Reviews</h4>
<table>
  <tr>
    <th>ID</th>
    <th>User_id</th>
    <th>Rating</th>
  </tr>
  <% @reviews.each do |review| %>
  <tr>
    <td><%= review.id %></td>
    <td><%= review.user_id %></td>
    <td><%= review.rating %></td>
  </tr>
  <% end %>
</table>
</div> <br>


<div class="link"><%=link_to 'Edit',edit_book_path(@book) %></div>
<div class="link"><%=link_to 'Delete',book_path(@book),method: :delete, data: {confirm: 'Are yo sure you wants to delete this book?'} %></div>
<div class="link">  <%= link_to'Back',books_path %> </div>

