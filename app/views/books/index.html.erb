
<div class="books">
   <div><h2>Books:</h2></div>

<div><%= link_to'Add New book',new_book_path %></div></br>

<div><table class="index_table">
   <thead>
      <tr>
         <th>id</th>
         <th>Name</th>
         <th>Actions</th>
      </tr>
   </thead>
   <tbody>
      <% @books.each do |book|%>
      <tr>
         <td><%= book.id %></td>
         <td><%= book.title %></td>
    <div><td class='Action'>
               <%=link_to 'Show',book_path(book) %>
               <%=link_to 'Edit',edit_book_path(book) %>
               <%=link_to 'Delete',book_path(book),method: :delete %></td></div>
      </tr>
      <%end%>
   </tbody>
</table></div>
</div>
